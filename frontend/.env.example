# ============================================================================
# WalletMind Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values
# SECURITY WARNING: NEVER commit .env.local to git!
# ============================================================================

# ============================================================================
# 1. WalletConnect Configuration (Required for Web3 Integration)
# ============================================================================
# Get your free project ID from: https://cloud.walletconnect.com/
# 1. Sign up at WalletConnect Cloud
# 2. Create a new project
# 3. Copy the Project ID from the dashboard
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ============================================================================
# 2. Backend API Configuration
# ============================================================================
# Development: http://localhost:8000
# Production: https://api.walletmind.example.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (typically same as API URL but with ws:// or wss://)
# Development: ws://localhost:8000
# Production: wss://api.walletmind.example.com
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================================================
# 3. Network Configuration
# ============================================================================
# Enable testnet mode for development
# Set to 'true' for development, 'false' for production
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Default network (sepolia, polygon-amoy, base-goerli, mainnet)
NEXT_PUBLIC_DEFAULT_NETWORK=sepolia

# ============================================================================
# 4. Application Settings
# ============================================================================
# Application environment (development, staging, production)
NEXT_PUBLIC_APP_ENV=development

# Enable debug mode (shows additional logging in console)
NEXT_PUBLIC_DEBUG=false

# ============================================================================
# 5. Feature Flags
# ============================================================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_AGENT_CREATION=true
NEXT_PUBLIC_ENABLE_INTER_AGENT_CHAT=true
NEXT_PUBLIC_ENABLE_DECISION_LOGS=true
NEXT_PUBLIC_ENABLE_API_PAYMENTS=true

# ============================================================================
# 6. Analytics & Monitoring (Optional)
# ============================================================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# End of Configuration
# ============================================================================

# REMINDER: After copying to .env.local:
# [ ] Get WalletConnect Project ID from https://cloud.walletconnect.com/
# [ ] Verify backend API URL matches your server
# [ ] Adjust network settings for your deployment
# [ ] Set appropriate feature flags
# [ ] Never commit .env.local to version control
