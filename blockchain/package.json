{
  "name": "walletmind-blockchain",
  "version": "1.0.0",
  "description": "Smart contracts for WalletMind AI Agent Autonomous Wallet System",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "hardhat test --verbose",
    "deploy:sepolia": "hardhat ignition deploy ./ignition/modules/WalletMind.ts --network sepolia",
    "deploy:polygonAmoy": "hardhat ignition deploy ./ignition/modules/WalletMind.ts --network polygonAmoy",
    "deploy:baseSepolia": "hardhat ignition deploy ./ignition/modules/WalletMind.ts --network baseSepolia",
    "deploy:local": "hardhat ignition deploy ./ignition/modules/WalletMind.ts --network hardhatMainnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,sol,json,md}\""
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "ai-agent",
    "erc-4337",
    "account-abstraction"
  ],
  "author": "WalletMind Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.12",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "chai": "^5.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.18.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.9",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.1",
    "typescript": "~5.8.0",
    "viem": "^2.38.4"
  }
}
